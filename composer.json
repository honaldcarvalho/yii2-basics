{
    "name": "weebz/yii2-basics",
    "description": "Basic Features for Yii2",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","basics"],
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/honaldcarvalho/yii2-basics",
    "authors": [
        {
            "name": "weebz",
            "email": "suporte@weebz.com.br"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-bootstrap5": "~2.0.8",
        "yiisoft/yii2-imagine": "^2.3",
        "yiithings/yii2-dotenv": "*",
        "kartik-v/yii2-widget-select2": "dev-master",
        "kartik-v/yii2-export": "dev-master",
        "kartik-v/yii2-bootstrap5-dropdown": "^1.0",
        "kartik-v/yii2-editors": "@dev",
        "phpseclib/phpseclib": "~3.0",
        "kartik-v/yii2-widget-datetimepicker": "dev-master",
        "onmotion/yii2-widget-apexcharts": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "weebz\\yii2basics\\": "src"
        }
    },
    "scripts": {
        "post-update-cmd": "@php yii migrate --migrationPath=@vendor/weebz/yii2-basics/src/migrations",
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('config/.env.example', '.env');\"",
            "@php yii migrate --migrationPath=@vendor/weebz/yii2-basics/src/migrations"
        ],
        "migrate":"@php yii migrate --migrationPath=@vendor/weebz/yii2-basics/src/migrations"
    }
}
